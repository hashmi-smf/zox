%nav.navbar.navbar-inverse.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} 
        %i.fa.fa-bolt
        Real Estate

    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        = render 'shared/navlist', links: current_nav_links
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do
              %b.caret 
              = current_user.email.split("@")[0].capitalize
            %ul.dropdown-menu
              %li
                = link_to edit_user_registration_path do
                  %i.fa.fa-key
                  Change Password
                                           
              %li
                = link_to destroy_user_session_path do
                  %i.fa.fa-sign-out
                  Sign Out

      -else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to 'SignIn', new_user_session_path
          %li= link_to 'SignUp', new_user_registration_path
}
      

%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}

